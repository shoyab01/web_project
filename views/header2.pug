style.
  .buttons {
    background-color: #555;
    color: white;
    font-size: 17px;
    border-radius:2px;
    border:none;
  }


  .heading {
    color: black;
    font-family:arial;
    text-align: center;
    background-color:#8080ff;
    top:0px;
    width:100%;
    cursor:context-menu;
    border-radius:5px;
    border:none;
    position:fixed;
    z-index:9;
    margin-bottom:200px;
  }


div.heading
  h1 Indian Institute of Information Technology, Design and Manufacturing, Kurnool
  h1 Question Forum
    sub(style="font-family:none; font-style:italic; font-size:20px; color:#ffd662ff;") share ideas...
  
  div.buttons
    a(href="/questionforum")
      button(type="button" id="questionforumid" style="padding: 10px 5px;cursor:pointer;border-radius:10px;border:none; background-color:#c3c388;" onmouseover="this.style.backgroundColor='#aaaa55'" onmouseout="this.style.backgroundColor='#c3c388';") Question Forum
  
    a(href="/ask")
      button(type="button" id="askquestionid" style="padding: 10px 5px;cursor:pointer;border-radius:10px;border:none; background-color:#c3c388;" onmouseover="this.style.backgroundColor='#aaaa55'" onmouseout="this.style.backgroundColor='#c3c388';") Ask a question

    -if(logoutbtnable !== undefined)
      a(href="/logout")
        button(type="button" id="logoutbtnid" style="padding: 10px 10px;float:right;cursor:pointer;border-radius:10px;border:none; background-color:red;" onmouseover="this.style.backgroundColor='#e60000'" onmouseout="this.style.backgroundColor='red';") logout (#{logoutbtnable}) 
    -else
      a(href="/login")
        button(type="button" id="loginbtnid" style="padding: 10px 10px;float:right;cursor:pointer;border-radius:10px;border:none; background-color:green;" onmouseover="this.style.backgroundColor='#00cc00'" onmouseout="this.style.backgroundColor='green';") Login/Sign Up